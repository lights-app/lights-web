doctype html
html
	head
	meta(charset='utf-8')

	//- viewport settings
	meta(name='viewport' content="width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=no")

	//- Apple/Android prior to M31 web-app settings
	meta(name='apple-mobile-web-app-title' content='Lights')
	meta(name="apple-mobile-web-app-capable" content="yes")
	meta(name="mobile-web-app-capable" content="yes")
	meta(name='apple-mobile-web-app-status-bar-style' content='black-translucent')

	//- Android web-app settings
	link(rel='manifest' href='manifest.json')

	//- Apple web-app icons
	link(rel='apple-touch-icon' sizes='120x120' href='/static/img/icons/lights-app-icon-120px.png')
	link(rel='apple-touch-icon' sizes='152x152' href='/static/img/icons/lights-app-icon-152px.png')
	link(rel='apple-touch-icon' sizes='167x167' href='/static/img/icons/lights-app-icon-167px.png')
	link(rel='apple-touch-icon' sizes='180x180' href='/static/img/icons/lights-app-icon-180px.png')

	//- Android prior to M31 web-app-icons
	link(rel='icon' sizes='120x120' href='/static/img/icons/lights-app-icon-120px.png')
	link(rel='icon' sizes='152x152' href='/static/img/icons/lights-app-icon-152px.png')
	link(rel='icon' sizes='167x167' href='/static/img/icons/lights-app-icon-167px.png')
	link(rel='icon' sizes='180x180' href='/static/img/icons/lights-app-icon-180px.png')

	title Lights
	link(href='/static/css/app.css' rel='stylesheet' type='text/css')
	link(href='https://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700italic,700,900,900italic' rel='stylesheet' type='text/css')

body(ontouchstart)
	.app
		.page-container.setup(data-view='Setup:setup')
			section.welcome-page(data-view='Page:content')
				header.toolbar
					button.back-btn(data-view='backBtn' data-outlet='title' data-action='click:back()') Back
					h1(data-outlet='title') Lights
				section.page-content
					.image.self-center.lights-icon
						h1.lights-icon-text Hello!

					p.self-center.text-center Let's walk through setting up your first Lights
					button.box-btn(data-action='click:start()') Start

		.settings
		.page-container.rooms(data-view='Rooms:rooms')
			section(data-view='RoomsOverview:content')

	
	script.templates(type='text/html')
		include ./templates
		include ./color-wheel
		include ./rooms
		include ./setup

		+templates
		+color-wheel
		+roomTemplates
		+setupTemplates
	
	script(src='/static/js/vendor.js')
	script(src='/static/js/app.js')
	script.
		document.addEventListener('DOMContentLoaded', function() {
			window.lrs.View.parseTemplates()
			new window.lights.App({el: document.querySelector('.app')})
		})