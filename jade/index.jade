doctype html
html
	head
	meta(charset='utf-8')

	//- viewport and web-app settings
	meta(name='viewport' content="width=device-width, initial-scale=1.0, user-scalable=no")
	meta(name='apple-mobile-web-app-title' content='Lights')
	meta(name="apple-mobile-web-app-capable" content="yes")
	meta(name='apple-mobile-web-app-status-bar-style' content='black-translucent')

	link(rel='apple-touch-icon' href='/static/img/icons/lights-icon-144px.png')

	title Lights
	link(href='/static/css/app.css' rel='stylesheet' type='text/css')
	link(href='https://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700italic,700,900,900italic' rel='stylesheet' type='text/css')

body(ontouchstart)
	.app
		.setup(data-view='Setup:setup')
			section.welcome-page(data-view='Page:preloaded')
				header.toolbar
					.left
						button.back-btn(data-view='backBtn' data-outlet='title' data-action='click:back()') Back
					.title
						h1(data-outlet='title') Lights
				section.page-content
					.image.self-center.lights-icon
						h1.lights-icon-text Hello!

					p.self-center.text-center Let's walk through setting up your first Lights
					button.box-btn(data-action='click:start()') Start

		.settings
		.rooms(data-view='Rooms:rooms')

	
	script.templates(type='text/html')
		include ./templates
		include ./color-wheel
		include ./rooms
		include ./setup

		+templates
		+color-wheel
		+roomTemplates
		+setupTemplates
	
	script(src='/static/js/vendor.js')
	script(src='/static/js/app.js')
	script.
		document.addEventListener('DOMContentLoaded', function() {
			window.lrs.View.parseTemplates()
			new window.lights.App({el: document.querySelector('.app')})
		})