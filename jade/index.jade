doctype html
html
	head
	meta(charset='utf-8')
	title
	link(href='/static/css/app.css' rel='stylesheet' type='text/css')

body
	.app
		.setup(data-view='Setup:setup')
			section.welcome-page(data-view='Page:preloaded')
				header.toolbar
					button.back-btn(data-view='backBtn' data-outlet='title' data-action='click:back()') Back
					h1(data-outlet='title') Welcome
				section.page-content
					button(data-action='click:start()') Start

		.settings
		.rooms(data-view='Rooms:rooms')
			.overview(data-view='RoomOverview:overview')
				ul(data-view='LRSList:roomList:RoomListItem')
	
	script.templates(type='text/html')
		include ./rooms
		include ./setup

		+roomTemplates
		+setupTemplates
	
	script(src='/static/js/vendor.js')
	script(src='/static/js/app.js')
	script.
		document.addEventListener('DOMContentLoaded', function() {
			window.lrs.LRSView.parseTemplates()
			window.lit.app = new window.lit.App(document.querySelector('.app'))
		})