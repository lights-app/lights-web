mixin roomTemplates

	section.rooms-overview-page(data-template='RoomsOverview')
		header.toolbar
			button.settings-btn(data-view='SettingsBtn:settingsBtn') Settings
			h1(data-outlet='title') Rooms
			.add-btn(data-view='AddBtn:addBtn')
		section.page-content
			ul.room-list.list.border-2.border-radius(data-view='RoomList:roomList:RoomListItem')
				li.no-rooms(data-view="noRooms")
					h2 It's empty in here!
					p.text-center Time to add some rooms. Click the "+" icon in the top right corner to add a new room

	section.new-room-device-list-page(data-template='NewRoomDevicesPage')
		header.toolbar
			button.back-btn(data-view='backBtn' data-outlet='title' data-action='click:back()') Back
			h1(data-outlet='title') New room
			.close-btn(data-view='CloseBtn:closeBtn')
		section.page-content
			h1.self-center.text-center Select the lights you want to use in this room
			p.self-center.text-center Selected lights that are online will start to pulse
			ul.self-center.device-list.list.border-2.border-radius(data-view='LRSList:lightsDeviceList:DeviceListItem')
			button.box-btn(data-action='click:next()') Next

	section.new-room-naming-page(data-template='NewRoomNamingPage')
		header.toolbar
			button.back-btn(data-view='backBtn' data-outlet='title' data-action='click:back()') Back
			h1(data-outlet='title') New room
			.close-btn(data-view='CloseBtn:closeBtn')
		section.page-content
			h1.self-center.text-center Give this room a name and an icon
			ul.room-icon-list.self-center(data-view='LRSList:roomIconList:RoomIconListItem')
			button.box-btn(data-action='click:next()') Next

	section.new-room-completion-page(data-template='NewRoomCompletionPage')
		header.toolbar
			button.back-btn(data-view='backBtn' data-outlet='title' data-action='click:back()') Back
			h1(data-outlet='title') New room
			.close-btn(data-view='CloseBtn:closeBtn')
		section.page-content
			h1.self-center.text-center Add new moment?
			p.self-center.text-center Moments allow you to quickly set your Lights to a configuration that you specify. 
			button.box-btn(data-action='click:skip()') Skip
			button.box-btn(data-action='click:newMoment()') New moment

	section.new-moment-page(data-template='NewMomentPage')
		header.toolbar
			button.back-btn(data-view='backBtn' data-outlet='title' data-action='click:back()') Back
			h1(data-outlet='title') New moment
			.close-btn(data-view='CloseBtn:closeBtn')
		section.page-content
			h1.self-center.text-center Configure your lights 
			p.self-center.text-center Select the lights you want to use and which color they should be.
			ul.new-moment-device-list.self-center.device-list.list.border-2.border-radius(data-view='LRSList:momentDeviceList:MomentDeviceListItem')
			button.box-btn(data-action='click:next()') Next

	section.new-moment-naming-page(data-template='NewMomentNamingPage')
		header.toolbar
			button.back-btn(data-view='backBtn' data-outlet='title' data-action='click:back()') Back
			h1(data-outlet='title') New moment
			.close-btn(data-view='CloseBtn:closeBtn')
		section.page-content
			h1.self-center.text-center Name this moment
			input.moment-naming-input.self-center(placeholder='My moment' type='text' data-outlet='momentName')
			button.box-btn(data-action='click:done()') Done

	li.room-list-item(data-template='RoomListItem')
		button.room-list-btn(data-action='mousedown:roomListItemTouchStart();touchstart:roomListItemTouchStart()')
		.horizontal-container
			.room-data
				span(data-outlet='name')
				ul.moment-list(data-view='MomentList:momentList:MomentListItem')
					li.moment-list-item.add-moment-btn.border-2.border-radius.fill-4(data-action='click:addMoment()')
						span +
			img.room-icon(data-outlet='icon')
		.lights-config(data-view='lightsConfig1')
			.lights-config.front.active(data-view='lightsConfig2')
		.delete-room-btn(data-action='click:deleteRoom()' data-view='deleteRoomBtn')
			img.delete-btn-icon(src='/static/img/icons/trash-bin.svg' data-view='deleteRoomIcon')

	li.moment-list-item.border-2.border-radius.fill-4(data-template='MomentListItem' data-action='click:select()')
		span(data-outlet='name')
			
	div.room(data-template='Room')
		h1(data-outlet='name')

	li.room-icon-list-item.border-2.border-radius.selectable.fill-2(data-template='RoomIconListItem' data-action='click:toggle()')
		img(data-outlet='icon')
		input(data-outlet='name' type='text')

	li.moment-device-list-item.device-list-item.fill-2.selectable(data-template='MomentDeviceListItem' data-action='click:toggle()')
		.left
			.toggle(data-view='Toggle:toggle')
			span.name(data-outlet='name')
			span.message Device disconnected, please reconnect
		.right
			image.color-wheel-icon(src='static/img/icons/color-wheel-icon.svg' data-action='click:openColorWheel()')
		